<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <style>
        body {
            margin: 0px;
            font-family: Arial, sans-serif;
        }
        .table-container{
            text-align: center;
            margin: 0px 20px;
        }
        table {
            
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 12px;
        }
        th {
            background-color: #f2f2f2;
        }
        .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
            margin-bottom: 10px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        nav {
            background-color: #333;
            color: #fff;
            height: 65px;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }
        nav a {
            color: #fff;
            text-decoration: none;
            margin-right: 20px;
        }
        img {
            height: 45px;
        }
        .left-side {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Responsive styles */
        @media screen and (max-width: 600px) {
            table {
                margin: 0px 20px;
                font-size: 12px;
            }
            th, td {
                padding: 8px;
            }
            .btn {
                padding: 8px 16px;
            }
            nav {
                height: auto;
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }
            nav a {
                margin-right: 0;
                margin-bottom: 5px;
            }
        }
    </style>
</head>
<body>
    <nav>
        <div class="left-side">
            <a href="/admin"><img src="../logo.jpeg" alt=""></a>
        </div>
    </nav>
    <div class="table-container">
        <h1>Employee's List</h1>
        <table>
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% userList.forEach((user,i) => { %>
                    <tr>
                        <td><%=i+1 %></td>
                        <td><%= user.fullName %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/view/attendance/<%= user._id %>" class="btn">Check Attendance</a>
                            <a href="/view/feedback/<%= user._id %>" class="btn">Check Feedback</a>
                            
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
