<!-- index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Venue Form</title>
</head>
<body>
    <h1>Venue Form</h1>
    <form action="/listings" method="post" enctype="multipart/form-data">
        <!-- Hidden input field to include the user's ID -->
        <input type="hidden" id="userId" name="userId" value="<%= userId %>">
        
        <label for="venue">Venue Name:</label>
        <input type="text" id="venue" name="listing[venue]" required><br><br>

        <label for="description">Description:</label><br>
        <textarea id="description" name="listing[description]" rows="4" cols="50" required></textarea><br><br>

        <label for="image">Image:</label>
        <input type="file" id="image" name="pageImg" accept="image/*" required><br><br>

        <label for="expenditure">Expenditure:</label>
        <input type="number" id="expenditure" name="listing[expenditure]" required><br><br>

        <label for="location">Location:</label>
        <input type="text" id="location" name="listing[location]" required><br><br>

        <button type="submit">Submit</button>
    </form>
</body>
</html>
